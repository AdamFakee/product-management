extends ../../layouts/default.pug

block main
  .container.my-3
    .row
        .col-12
            .card.p-4.my-4
                form(
                    action="/address/create"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="fullName") Họ tên
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                        )
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            required
                        )
                    div(class="form-group")
                        label(for="address") Địa chỉ
                        input(
                            type="text"
                            class="form-control"
                            id="address"
                            name="address"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success btn-block"
                        ) tạo mới địa chỉ