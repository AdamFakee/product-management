extends ../../layouts/default.pug

block main
  h1(class="mb-4") Danh sách địa chỉ

  .card.mb-3
    .card-header  
    .card-body
        .row
            .col-8
            .col-4.text-right
                a(
                href=`/address/create`
                class="btn btn-outline-success"
            ) + Thêm mới
        if(address.info[0])    
            table(
                class="table table-hover table-sm"
            )
                thead
                    tr
                        th STT
                        th Họ tên
                        th Số điện thoại
                        th Địa chỉ
                        th Mặc định
                        th Hành động

                tbody
                    each element, index in address.info
                        tr 
                            td #{index+1}
                            td #{element.fullName}
                            td #{element.phone}
                            td #{element.address}
                            td
                                input(type="checkbox" checked=element.default address-default-checkbox id=element.id)
                            td
                                
        else 
            h3 bạn chưa nhập địa chỉ, vui lòng nhập