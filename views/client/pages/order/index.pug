extends ../../layouts/default
include ../../mixins/order
block main 
    .container
        header
            h1 Quản lý Đơn hàng
        nav.status-tabs
            button(class='tab-button' onclick=`showTab('all')`) Tất cả
            button(class='tab-button' onclick="showTab('confirmed')") Đã xác nhận
            button(class='tab-button' onclick="showTab('pending')") Chờ xác nhận
            button(class='tab-button' onclick="showTab('shipping')") Đang vận chuyển
            button(class='tab-button' onclick="showTab('delivered')") Đã giao

            
        div(class='tab-content' id="all")
            +order(order)
        div(class='tab-content' id="confirmed")
            +order(listOrder.confirmed)
        div(class='tab-content' id="pending")
            +order(listOrder.pending)
        div(class='tab-content' id="shipping")
            +order(listOrder.shipping)
        div(class='tab-content' id="delivered")
            +order(listOrder.delivered)