mixin list-product(productList)
    thead
        tr
        th
          input(name="checkAll" type="checkbox")
        th STT
        th Hình ảnh
        th Tiêu đề
        th Giá
        th Trạng thái
        th Hành động

        tbody
          each item, index in productList
            tr 
              td 
                input(name="checkItem" type="checkbox")
              td #{index+1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="80px"
                  height="auto"
                )
              td #{item.title}
              td #{item.price}$
              td
                if(item.status == "active")
                  button(
                    link=`/${prefixAdmin}/products/change-status/inactive/${item.id}` 
                    class="badge badge-success"
                    button-status-change
                    ) Hoạt động
                else
                  button(
                    link=`/${prefixAdmin}/products/change-status/active/${item.id}`
                    class="badge badge-danger"
                    button-status-change
                    ) Dừng hoạt động
              td
                button(class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1") Xóa